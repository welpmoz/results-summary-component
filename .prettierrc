{
	"overrides": [
		{
			"files": ["*.css", "*.scss", "*.sass"],
			"options": {
				"printWidth": 80,
				"tabWidth": 2,
				"useTabs": false,
				"semi": false,
				"singleQuote": true,
				"bracketSpacing": true,
				"endOfLine": "lf",
				"orderImports": true,
				"pluginSearchDirs": false,
				"plugins": ["prettier-plugin-css-order"],
				"cssDeclarationSorterOrder": "alphabetical"
			}
		}
	]
}
